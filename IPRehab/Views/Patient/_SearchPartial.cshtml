@model PatientListViewModel

<div class="flex-container-evenly-justified fixedTop">
  <div class="pageTitle">
    Patients
    <input id="searchCriteria" type="text"
           placeholder="enter a critera" title="criteria are like the text in the table column such as 1V01 or 64"
           value="@(Model.SearchCriteria)" />
    <button type="button" id="searchBtn" class="btn-sm btn-info">Search</button>

    @*the Model.Patients.Count() is total matched records that are Viewable in the current pager.
      The Model.TotalPatients is total matched records in the repository*@
    @if (Model.Patients.Any())
    {
      <span id="recordCount">@($"{Model.Patients.Count()} of {Model.TotalPatients} records")</span>
    }
    else
    {
      <span id="recordCount">0 records</span>
    }
  </div>
</div>
