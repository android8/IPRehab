@model MDSubmitButtonViewModel
<div class="mdc-touch-target-wrapper">
  <div class="flex-start-row-nowrap">
    <button class="mdc-button mdc-button--raised mdc-button--touch rotate" id="submit" disabled>
      <div class="mdc-button__ripple"></div>
      <span class="mdc-button__label">Save @($"{ Model.FacilityID } FY{ Model.FiscalYear }")</span>
      <div class="mdc-button__touch"></div>
      @if (Model.QuestionPageID != 0)
      {
        <span id="btnCloneServer" class="btnCloneServer" title="add item from server"
              data-url='@Url.Action("Edit", "UserAnswer", new
                 {
                   facilityID = Model.FacilityID,
                   questionPage = Model.QuestionPageID,
                   fy = Model.FiscalYear,
                   staffFacilityRelationID = Model.StaffFacilityRelationID,
                   cloning = Model.Cloning
                 })'
              data-newClonedId=""
              data-appendTo="form">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
          </svg>
        </span>
      }
    </button>
  </div>
</div>


